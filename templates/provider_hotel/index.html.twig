{% extends 'base.html.twig' %}

{% block title %}Hotel index{% endblock %}

{% block body %}
     <div class="card-header" style="margin-top: 100px">
        <svg class="svg-inline--fa fa-table fa-w-16 mr-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg>
        Provider Hotel index
        <a href="{{ path('provider_hotel_new') }}"><button class="btn1 btn-info1">Create new</button></a>
    </div>

    <ol class="breadcrumb mb-4">    
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-4">
        <div class="card mb-4">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Ville</th>
                                <th>Category</th>
                                <th>Link</th>
                                <th>Provider</th>
                                <th>image</th>
                                <th>prix</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for provider_hotel in provider_hotels  %}
                            <tr>
                                <td>{{ provider_hotel.id }}</td>
                                <td>{{ provider_hotel.name }}</td>
                                <td>{{ provider_hotel.ville }}</td>
                                <td>{{ provider_hotel.category }}</td>
                                <td><a href="{{ provider_hotel.link }}" onclick="window.open(this.href); return false;">{{ provider_hotel.link }}</a></td>
                                <td>{{ provider_hotel.provide }}</td>
                                <td>
                                    <a href="{{ path('provider_img_show', {'id': provider_hotel.id}) }}">show</a>
                                </td>
                                <td>
                                    <a href="{{ path('provider_prix_show', {'id': provider_hotel.id}) }}">show</a>
                                </td>
                                <td>
                                    <a href="{{ path('provider_hotel_show', {'id': provider_hotel.id}) }}">show</a>
                                    <a href="{{ path('provider_hotel_edit', {'id': provider_hotel.id}) }}">edit</a>
                                    {{ include('provider_hotel/_delete_form.html.twig') }}

                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
