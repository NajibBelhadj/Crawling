{% extends 'base.html.twig' %}

{% block title %}Provider index{% endblock %}

{% block body %}
    <div class="card-header" style="margin-top: 100px">
        <svg class="svg-inline--fa fa-table fa-w-16 mr-1" aria-hidden="true" focusable="false" data-prefix="fas" data-icon="table" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" data-fa-i2svg=""><path fill="currentColor" d="M464 32H48C21.49 32 0 53.49 0 80v352c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V80c0-26.51-21.49-48-48-48zM224 416H64v-96h160v96zm0-160H64v-96h160v96zm224 160H288v-96h160v96zm0-160H288v-96h160v96z"></path></svg>
            Provider index
        <a href="{{ path('provider_new') }}"><button class="btn1 btn-info1">Create new</button></a>
    </div>
    <ol class="breadcrumb mb-4">    
        <li class="breadcrumb-item active">Tables</li>
    </ol>
    <div class="card mb-4">
        <div class="card mb-4">

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0" >
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>phone</th>
                                <th>Email</th>
                                <th>Link</th>
                                <th>ProviderRef</th>
                                <th>Hotels</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for provider in providers %}
                            <tr>
                                <td>{{ provider.id }}</td>
                                <td>{{ provider.name }}</td>
                                <td>{{ provider.tel }}</td>
                                <td>{{ provider.email }}</td>
                                <td><a href="{{ provider.link }}" onclick="window.open(this.href); return false;">{{ provider.link }}</a></td>
                                <td>{{ provider.providerRef ? 'Yes' : 'No' }}</td>
                                <td><a href="{{ path('hotelsprovider', {'id': provider.id}) }}">show</a></td>
                                <td>
                                    <a href="{{ path('provider_show', {'id': provider.id}) }}">show</a>
                                    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>
                                    {{ include('provider/_delete_form.html.twig') }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                                    
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
